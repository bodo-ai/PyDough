{
    "name": "PyDough",
    "build": {
      "dockerfile": "Dockerfile",
      "context": ".."
    },
    "customizations": {
        "vscode": {
            "settings": {
                "workbench.editorAssociations": {
                    "*.md": "vscode.markdown.preview.editor",
                    "*.ipynb": "jupyter-notebook"
                }
            },
            "extensions": [
                // Python
                "ms-python.python",
                "ms-python.vscode-pylance",
                // Jupyter
                "ms-toolsai.jupyter",
                "ms-toolsai.vscode-jupyter-powertoys"
            ]
        },
        "codespaces": {
            "openFiles": [
                "demos/README.md",
                "demos/notebooks/Introduction.ipynb"
            ]
        },
        "onCreateCommand": "./demos/setup_tpch.sh ./demos/tpch.db",
        "postCreateCommand": "python -m pip install ."
    }
}
